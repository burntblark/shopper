	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical">

	<LinearLayout
	    android:id="@+id/summary_chart"
	    android:layout_width="fill_parent"
	    android:layout_height="200dp"
	    android:background="@color/black"
	    android:orientation="vertical" >
	
